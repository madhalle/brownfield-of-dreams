<section class="dashboard-main">
  <h1> <%= current_user.first_name %>'s Dashboard </h1>

  <%= button_to 'Log Out', logout_path, method: 'delete', class: "btn btn-primary mb1 bg-teal" %>
  <h3>Account Details</h3>
  <ul>
    <li> <%= current_user.first_name  %> <%= current_user.last_name %> </li>
    <li> <%= current_user.email%> </li>
  </ul>
  <section>
    <h1>Bookmarked Segments</h1>
  </section>


  <% if current_user.token %>
    <section class="github">
      <h1>GitHub Repositories</h1>
      <ul>
        <% @repos[0..4].each do |repo| %>
        <li class="repo-link">
          <%= link_to repo.name, repo.html_url %>
        </li>
        <% end %>
      </ul>
      <h2>Followers</h2>
      <section class="followers">
        <% @followers.each do |follower| %>
          <p class="follower" id="follower-<%= follower.login %>">
            <%= link_to follower.login, follower.link %> <%= link_to "Add Friend" if follower.has_account? %>
          </p>
        <% end %>
      </section>

      <h2>Followings</h2>
      <section class="followings">
        <% @followings.each do |following| %>
          <p class="following" id="following-<%= following.login %>">
            <%= link_to following.login, following.link %> <%= link_to "Add Friend" if following.has_account? %>
          </p>
        <% end %>
      </section>

      <section class="friends">
        <h2>Friends</h2>
        <ul>
          <% current_user.friends.each do |friend| %>
            <li><%= friend.github_username %></li>
          <% end %>
        </ul>
      </section>
    </section>
  <% else %>
    <%= link_to "Connect to Github", "/auth/github", class: "btn btn-primary mb1 bg-teal" %>
  </section>
  <% end %>
